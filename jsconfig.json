{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,

        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.d.js",
        "resources/js/**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
}
